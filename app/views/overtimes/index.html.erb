<h1>Horas Extras</h1>


<%= render "shared/menu" %>

    <div class="pull-right">Pesquisar <input id="filter" type="text" /></div>
    <div class="pull-left">Total de Horas: </div>
    <table data-filter="#filter" class="footable">
      <thead>
        <tr>
          <th data-class="expand" data-sort-initial="true">
            Motivo
          </th>
          <th>
            Inicio
          </th>
          <th data-hide="phone,tablet">
            Fim
          </th>
          <th data-hide="phone,tablet" data-type="numeric">
            Horas trabalhadas
          </th>
          <th data-hide="phone">
            Projeto
          </th>
          <th data-hide="phone">
            Status
          </th>
        </tr>
      </thead>
      <tbody>
        <% @overtimes.each do |overtime| %>
          <tr>
            <td><%= overtime.description %></td><td><a target="_blank" href="http://www.google.com"><%= overtime.start_overtime.strftime('%d/%m/%Y %H:%M') %></a></td><td><%= overtime.end_overtime.strftime('%d/%m/%Y %H:%M') %></td>
            <td data-value="78025368997"><%= distance_of_time_in_words(overtime.start_overtime, overtime.end_overtime, true) %></td>
            <td data-value="suspended"><%= overtime.project.name %></td>
            <td data-value="suspended">
              <% if overtime.status == "pedding" 
                  concat image_tag("suspended.png")           
               else overtime.status == "approved"
                  concat image_tag("active.png") 
              end
              %>
          </td>
        </tr>   
        <% end %> 
      </tbody>
    </table>

     