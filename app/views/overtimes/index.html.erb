<h1>Horas Extras</h1>


<%= render "shared/menu" %>



<table>
  <tr>
    <th>Motivo</th>
    <th>Inicio</th>
    <th>Fim</th>
    <th>Horas Trabalhadas</th>
    <th>Project</th>
  
  </tr>

<% @overtimes.each do |overtime| %>
  <tr>
    <td><%= overtime.description %></td>
 
    <td><%= overtime.start_overtime %></td>
    <td><%= overtime.end_overtime.strftime('%d/%m/%Y %H:%M') %></td>
    <td><%= distance_of_time_in_words(overtime.start_overtime, overtime.end_overtime, true) %></td>
    <td><%= overtime.project.name %></td>
  </tr>
<% end %>
</table>

