<h1>Relatorio das Horas</h1>


<%= render "shared/menu" %>
    <div class="pull-left"> 
      <%= select("project", "project_id", @projects.collect {|project| [ project.name, project.id ] }, { :prompt => 'Selecione um projeto' }) %>
    </div>
    <div class="pull-right">Total de Horas  <%=  (Overtime.SumOvertimes(current_user)/ 3600).to_i %> Horas </div>
    <table data-filter="#filter" class="footable">
      <thead>
        <tr>
          <th data-class="expand" data-sort-initial="true">
            Projeto
          </th>
          <th>
           Usuario 
          </th>
          <th data-hide="phone,tablet">
            Horario de Inicial
          </th>
          <th data-hide="phone">
            Horairio Final
          </th>
          <th data-hide="phone">
            Motivo
          </th>
          <th data-hide="phone">
            Status de Aprovação
          </th>
        </tr>
      </thead>
      <% @overtime.each do |overtime| %>
          <tr>
            <td data-value="suspended"><%= overtime.project.name %></td>
            <td><%= overtime.user.name %></td>
            <td><%= overtime.start_overtime.strftime('%d/%m/%Y %H:%M') %></td>
            <td><%= overtime.end_overtime.strftime('%d/%m/%Y %H:%M') %></td>
            <td><%= overtime.description %></td>
            <td>
              <% if overtime.status == "pedding" 
                  concat image_tag("suspended.png") 

               else overtime.status == "approved"
                  concat image_tag("active.png") 
              end
              %>         
          </tr>
        <% end %> 
      </tbody>
    </table>
      

     